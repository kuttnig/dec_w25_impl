{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://marktverbund25.at/list_offers_res.schema.json",
    "title": "list offers response",
    "description": "format of response body to list offers for a product",
    "type": "object",
    "properties": {
        "offers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "offer_id": {
                        "type": "string"
                    },
                    "seller": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "exclusiveMinimum": 0
                    }
                },
                "required": [
                    "offer_id",
                    "seller",
                    "price"
                ]
            }
        }
    },
    "required": [
        "offers"
    ]
}