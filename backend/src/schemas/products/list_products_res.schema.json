{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://marktverbund25.at/list_prod_res.schema.json",
    "title": "list products response",
    "description": "format of response body to list available products",
    "type": "object",
    "properties": {
        "products": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "prod_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "prod_id",
                    "name",
                    "description"
                ]
            }
        }
    },
    "required": [
        "products"
    ]
}