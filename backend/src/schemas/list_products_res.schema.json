{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://marktverbund25.at/list_prod_res.schema.json",
  "title": "list products response",
  "description": "format of response body to list available products",
  "type": "object",
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "prod_id": { "type": "number", "exclusiveMinimum": 0},
          "name":    { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["prod_id", "name", "description"]
      }
    }
  },
  "required": ["products"]
}
