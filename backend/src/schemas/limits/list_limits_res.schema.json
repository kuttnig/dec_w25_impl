{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://marktverbund25.at/list_limits_res.schema.json",
    "title": "list limit orders response",
    "description": "format of response body to list limit orders of a user",
    "type": "object",
    "properties": {
        "limits": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "lim_id": {
                        "type": "string"
                    },
                    "prod_id": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "fulfilled",
                            "expired",
                            "canceled"
                        ]
                    }
                },
                "required": [
                    "lim_id",
                    "prod_id",
                    "price",
                    "status"
                ]
            }
        }
    },
    "required": [
        "limits"
    ]
}